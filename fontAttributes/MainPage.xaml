<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fontAttributes.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Margin="20">
            <Label Text="Właściwości czcionki"
                   BackgroundColor="#558B2F"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="Large"/>
            <Label Text="Rozmiar: 0" 
                   x:Name="lblRozmiar"
                   FontSize="Medium"/>
            <Slider Maximum="40"
                    Minimum="0" 
                    Value="0" 
                    ValueChanged="onSldrSlid"
                    x:Name="sldrSize"/>
            <Label Text="Dzień Dobry" 
                   x:Name="lblCytat"
                   FontSize="0"/>
            <Button Text=">>"
                    BackgroundColor="#558B2F"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"
                    Clicked="onNextClicked"
                    Padding="50,5"
                    CornerRadius="0"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
